.userContainer
  %header.userContainer__userHeader
    .userHeader
      .userHeader__logo
        = link_to '#' do
          = image_tag 'material/logo.png'
  .userContainer__userMain
    %h2.userContainer__userMain__title ログイン
    .userMain
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .userMain__formGroup
          %p.userMain__formGroup__errorMsg
            = flash[:alert]
        .userMain__formGroup
          = f.label :email, class: 'userMain__formGroup__label'
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'userMain__formGroup--input', placeholder: "例)aaa.gmail.com"
        .userMain__formGroup
          = f.label :password, class: 'userMain__formGroup__label'
          %br/
          = f.password_field :password, autocomplete: "current-password", class: 'userMain__formGroup--input', placeholder: "7文字以上の半角英数字"
        - if devise_mapping.rememberable?
          .userMain__formGroup
            = f.check_box :remember_me
            = f.label :remember_me, class: 'userMain__formGroup__label'
        .userMain__actions
          = f.submit "ログイン", class: 'userMain__actions--Btn'
        .userMain__formGroup
          = render "devise/shared/links"
  = render 'devise/registrations/footer'
