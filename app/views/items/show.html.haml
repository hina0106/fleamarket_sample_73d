.itembuy-container
  = render 'common/header'
  %section.itembuy-content
    %h1.itembuy-content__name
      = @item.name
    .itembuy-content__clearfix
      .itembuy-content__photo
        .itembuy-content__auter
          .itembuy-content__owl-carousel{ id: 'main' }
            = image_tag "material/IMG_1.jpeg", class: 'owl-carousel', size: '300x300' #あとで上段に= @item.images.each do |image|入れてJPEG部分はimageに変更
      .itembuy-content__owl-carousel-thumb{id: 'thumbs'}
        = image_tag "material/IMG_1.jpeg", class: 'owl-carousel-sub', size: '60x60' # あとで上段に= @item.images.each do |image|入れて、JPEG部分はimageに変更
        .itembuy-content__owl-stage
        .itembuy-content__owl-bots
      %table.itembuy-content__table
        %tbody
          %tr
            %th 出品者
            %td
              = link_to "#{@item.user.name}", '#', class: "user-name-string";
              %div
                .itembuy-user-ratings{ id: 'itembuy-icon-good' }
                  %i.fas.fa-smile
                  %span 22
                .itembuy-user-ratings
                  %i.fas.fa-meh
                  %span 25
                .itembuy-user-ratings
                  %i.fas.fa-frown
                  %span 5000
          %tr
            %th カテゴリー
            %td
              -# = link_to  '/' do
              -#   = @bigcategory.name
              -# - if @category.present?
                -# = link_to '/' do
                  -# .itembuy-table-sub
                  -#   %i.fas.fa-chevron-right
                  -#   = @category.name
              -# = link_to '/' do
              -#   .itembuy-table-sub
              -#     %i.fas.fa-chevron-right
              -#     = @smallcategory.name
          %tr
            %th  ブランド
            %td
              = link_to '/' do
                -# = @item.brand
          %tr  
            %th  サイズ
            %td
              = link_to '/' do
                = @item.size
          %tr
            %th 商品の状態
            %td
              -# = @condition.value
          %tr
            %th 配送料の負担
            %td
              -# = @delivery_charge.value
          %tr
            %th 配送の方法
            %td
              -# = @delivery_way.value
          %tr
            %th 配送元地域
            %td
              = link_to '/' do
                -# = @prefecture.name
          %tr
            %th 発送日の目安
            %td
              -# = @delivery_days.value
      .item-price-box
        %span.item-price-box__bold<
          -# = @item.jpy
        %span.item-tax (税込)
        %span.item-fee_payer
      -if user_signed_in?
        -if @item.user_id == current_user.id
          = link_to edit_item_path, data: {turbolinks: false} do
            .item-edit-btn 商品の編集
            .item-btn-or or
            .item-stop-btn 出品を一旦停止する
          = link_to '#', method: :delete, data: { turbolinks: false} do
            .item-stop-btn この商品を削除する   
        -else 
          -# -if @item.status == 0
            = link_to item_card_confirmation_path(@item), data: {turbolinks: false} do
              .item-buy-btn 購入画面に進む
          -else
            .item-buy-btn-sold 売り切れました
      -else
        -# -if @item.status == 0
          = link_to "/users/sign_in" do
            .item-buy-btn 購入画面に進む
        -else
          .item-buy-btn-sold 売り切れました
      -unless user_signed_in? && @item.user_id == current_user.id
        .item-text
          %p.item-text__inner
            -# = @item.text
        .item-button-container.clearfix
          .item-button-left
            .item-button-like
              %button{ type: 'button', name: 'like!', class: 'i far fa-heart' }
                %i.far.heart
                %span.fade-in-down お気に入り
                %span.fade-in-down 0
          .item-button__report
            = link_to "", class: "item-button__report" do
              %i.far.fa-flag
              %span.fade-in-down 不適切な商品の報告            
          .item-button-right
            = link_to 'https://www.mercari.com/jp/safe/description/', target: "_blank", class: "safe-description" do
              %i.fas.fa-shopping-bag
              あんしん・あんぜんへの取り組み
    .message-content
    .message-content__box__form
      .item-message-content
        -if @comments 
          -@comments.each do |comment| 
            .item-message-comment
              .message-items
                .message-user
                  = image_tag 'mypage/user-icon.png', size: '30x30', alt: 'user-icon', class:"user-icon"
                  .message-user-name
                    %p
                      = comment.user.nickname
                .message-body
                  = comment.text
                  .message-icons
                    .message-icon-left
                      = fa_icon "history"
                      %span
                        1時間
                    .message-icon-right
                      .message-delete
                        = link_to("/items/#{@item.id}/comments/#{comment.id}",{method:"delete"}) do
                          = fa_icon "trash"
                  %i.icon-ballon
        .item-message-form
          -# = form_for(@comment, url:"/items/#{@item.id}/comments") do |f|
            %p.attention 
              相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
            =f.text_field :text, class:"message-form"
            .message-submit__details
              = f.submit "コメントする", class:"comment-button"
      .nav-item-link
        .previous-item.items-link_to
          %i.fas.fa-chevron-left
          = link_to "前の商品へ", "#"
          .next-item.items-link_to
            = link_to "次の商品へ", "#"
            %i.fas.fa-chevron-right
        .item-social-media-box
          .text-center
          %ul.social-media-box
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                %i.fab.fa-facebook-square
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                %i.fab.fa-twitter-square
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                %i.fab.fa-pinterest-square
  = render "common/footer"